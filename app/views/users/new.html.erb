<%= form_for @user do |f| %>
  <div class="columns is-mobile is-centered">
    <div class="column is-one-quarter custom">
      <div class="field">
        <%= f.label :username %>
        <div class="control">
          <%= f.text_field :username, class: "input is-primary" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password %>
        <div class="control">
          <%= f.password_field :password, class: "input is-primary" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "Confirmation" %>
        <div class="control">
          <%= f.password_field :password_confirmation, class: "input is-primary" %>
        </div>
      </div>
      <div class="columns is-centered">
        <%= f.submit "Create User", class: "button is-primary custom" %>
      </div>
    </div>
  </div>
<% end %>
