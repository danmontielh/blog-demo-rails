<%= content_for :page_title, 'Index' %>
<div class="section">
  <div class="container">
    <% @post.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title ls-4"> <%= link_to post.title ,post %> </p>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>
          <div class="comment-count">
            <span class="tag ls-rounded"> </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
