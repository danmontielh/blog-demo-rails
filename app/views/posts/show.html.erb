<%= content_for :page_title, @post.title %>
<%= provide :author, "By: " + @post.user.username %>
<div class="section">
  <div class="container">
    <div class="content">
      <div class="picture_cover">
      <%= image_tag @post.cover_picture %>
      </div>
      
      <%= @post.content %>
    </div>
    <% if logged_in? %>
      <nav class="level">
        <div class="level-left">
          <p class="level-item">
            <strong>Actions</strong>
          </p>
        </div>
        <div class="level-righ">
          <p class="level-item">
            <%= link_to "Edit", edit_post_path(@post), class: "button" %>
          </p>
          <p class="level-item">
            <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-danger" %>
          </p>
        </div>
      </nav>
      <hr />
    <% end %>
  </div>
</div>
<section class="comments">
<div class="container">
  <h2 class="subtitle is-5"> <strong><%= @post.comments.count %> </strong> comments</h2>
  <%= render @post.comments %>
  <% if logged_in? %>
    <div class="comment-form">
      <hr />
      <h3 class="subtitle is-3"> Leave a reply</h3>
      <%= render 'comments/form' %>
    </div>
  <% end %>
  </div>
</section>
