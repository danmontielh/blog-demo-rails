<!DOCTYPE html>
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    	<section class="hero is-primary">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	          <%= link_to 'Demo Blog', root_path, class: "navbar-item" %>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
						<% if logged_in? %>
	            <%= link_to "Create New Post", new_post_path, class:"navbar-item" %>
							<%= link_to "Log Out", logout_path, method: :delete, class:"navbar-item" %>
						<% else %>
							<%= link_to "Sign In", signin_path, class:"navbar-item" %>
							<%= link_to "Log In", login_path, class:"navbar-item" %>
						<% end %>
	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title"><%= yield :page_title %></h1>
				<p><%= yield :author %></p>
	    </div>
	  </div>
	</section>
    <%= yield %>
  </body>
</html>
