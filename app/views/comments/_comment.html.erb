<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p>
                <strong> <%= comment.user.username %>: </strong>
                <%= comment.comment %>
                </p>
            </div>
        </div>
        <% if logged_in? %>
            <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger", data: {confirm: "Are you sure?" } %>
        <% end %>
    </article>
</div>