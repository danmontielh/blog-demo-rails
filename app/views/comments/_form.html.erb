<%= simple_form_for([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :comment, input_html: { class: 'textarea input is-primary' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-primary custom" %>
<% end %>